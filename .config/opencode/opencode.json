{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "mcp": {
    "fetch": {
      "type": "local",
      "command": [
        "/opt/homebrew/bin/uvx",
        "mcp-server-fetch"
      ]
    },
    "serena": {
      "type": "local",
      "command": [
        "/opt/homebrew/bin/uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server"
      ]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  }
}
