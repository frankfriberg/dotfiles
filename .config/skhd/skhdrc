# fast focus desktop
meh - 1 : yabai -m space --focus 1
meh - 2 : yabai -m space --focus 2
meh - 3 : yabai -m space --focus 3
meh - 4 : yabai -m space --focus 4

# focus window
meh - d : yabai -m window --focus east || yabai -m display --focus east 
meh - a : yabai -m window --focus west || yabai -m display --focus west
meh - w : yabai -m window --focus north || yabai -m window --focus stack.prev || yabai -m window --focus stack.last
meh - s : yabai -m window --focus south || yabai -m window --focus stack.next || yabai -m window --focus stack.first

# send window to monitor and follow focus
ctrl + alt - 1: yabai -m window --display 1; yabai -m display --focus 1
ctrl + alt - 2: yabai -m window --display 2; yabai -m display --focus 2

# move windows
shift + cmd - l : yabai -m window --swap east || (yabai -m window --display east && yabai -m display --focus east)
shift + cmd - h : yabai -m window --swap west || (yabai -m window --display west && yabai -m display --focus west)
shift + cmd - k : yabai -m window --swap north
shift + cmd - j : yabai -m window --swap south

# balance window widths to 50 / 50
meh - b : yabai -m space --balance

# rotate windows around the
meh - r : yabai -m space --rotate 90

# set layout to stack
meh - f : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end') 

# restart yabai
rcmd - r : yabai --restart-service

# scratchpads
hyper - 1 : yabai -m window --toggle slack || open -a Slack
hyper - 2 : yabai -m window --toggle telegram || open  -a Telegram
hyper - 3 : yabai -m window --toggle docker || open -a "Docker Desktop"
