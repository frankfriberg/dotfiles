# fast focus desktop
hyper - 1 : yabai -m space --focus 1
hyper - 2 : yabai -m space --focus 2
hyper - 3 : yabai -m space --focus 3
hyper - 4 : yabai -m space --focus 4

# focus window
hyper - l : yabai -m window --focus east || yabai -m display --focus east 
hyper - h : yabai -m window --focus west || yabai -m display --focus west
hyper - k : yabai -m window --focus north
hyper - j : yabai -m window --focus south

# send window to desktop and follow focus
fn + hyper - 1: yabai -m window --space  1; yabai -m space --focus 1
fn + hyper - 2: yabai -m window --space  2; yabai -m space --focus 2
fn + hyper - 3: yabai -m window --space  3; yabai -m space --focus 3
fn + hyper - 4: yabai -m window --space  4; yabai -m space --focus 4

# send window to monitor and follow focus
fn + alt - 1: yabai -m window --display 1; yabai -m display --focus 1
fn + alt - 2: yabai -m window --display 2; yabai -m display --focus 2

# toggle window zoom
hyper - f : yabai -m window --toggle zoom-fullscreen

# goto application
# 0x0A is $
rcmd - 0x0A : open -a "kitty"
rcmd - g : open -a "Google Chrome"
rcmd + shift - g : open -a "Safari"
rcmd - s : open -a "Slack" || open -a "Telegram"
rcmd - backspace : open -a "Spotify"
rcmd - f : open -a "Figma"
rcmd - m : open -a "Spark" || open -a "Mail"
rcmd - n : open -a "Notion" || open -a "Notes"
